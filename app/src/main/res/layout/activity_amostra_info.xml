        </LinearLayout>

        <LinearLayout
            style="@style/itemDetalheEspecie">
            <TextView
                android:text="Criando em: "
                style="@style/labelDetalheEspecie"/>

            <TextView
                android:id="@+id/dateCreateAmostra"
