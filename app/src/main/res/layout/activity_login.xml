<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.darwin.aigus.darwin.ActivityLogin"
    android:background="@drawable/shape_background_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_logo_darwin"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name" />
        <TextView
            android:text="Faça Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/nameUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_background_white_border"
            android:padding="15dp"
            android:hint="Usuário"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_background_white_border"
            android:padding="15dp"
            android:hint="Senha"
            android:layout_marginTop="5dp"
            android:inputType="textWebPassword"/>

        <Button
            android:id="@+id/btnLogar"
            android:text="ENTRAR"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_login"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnNewAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:text="Criar conta grátis"
            android:textColor="#000000"
            android:background="@drawable/selector_btn_new_account"/>

        <Button
            android:id="@+id/btnForgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:text="Esqueci as credenciais de acesso"
            android:textColor="#000000"
            android:background="@drawable/selector_btn_new_account"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
