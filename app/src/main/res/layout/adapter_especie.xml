<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_background_white">

    <LinearLayout
        android:id="@+id/contBtnLev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_options">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="left|center"
            android:padding="10dp">
            <TextView
                android:id="@+id/nameEspecie"
                android:text="Fazenda dona benta"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/adapterTitle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:text="2 m"
                android:id="@+id/dataHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="5 cm"
                android:id="@+id/dataDiameter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="right">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:background="@drawable/selector_btn_options" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete_black_24dp"
                android:background="@drawable/selector_btn_options" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>