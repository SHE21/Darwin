    android:background="@drawable/shape_warnning"
    android:padding="5dp"
    android:visibility="gone">
<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_warnning_black_24dp"
    android:layout_gravity="right" />
